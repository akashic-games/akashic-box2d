  "compilerOptions": {
    "target": "ES5",
    "lib": ["es5"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "inlineSourceMap": false,
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "sourceMap": false
