{
  "name": "@akashic-extension/akashic-box2d",
  "version": "2.3.0",
  "description": "Box2D physics engine for Akashic",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build && npm run doc",
    "clean": "shx rm -rf lib && shx rm -rf doc",
    "build": "npm run clean && tsc -p tsconfig.json",
    "doc": "typedoc --out ./doc --mode file && shx cp -r ./img ./doc",
    "jest": "jest",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "test": "npm run jest && npm run lint"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-box2d.git"
  },
  "publishConfig": {
    "@akashic-extension:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "dependencies": {
    "@akashic/akashic-engine": "~2.4.14",
    "@flyover/box2d": "1.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "jest": "^24.7.1",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*Spec.(ts|js)"
    ],
    "setupFiles": ["<rootDir>/src/__tests__/setup.ts"]
  }
}
